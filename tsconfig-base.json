{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES6",
    "removeComments": true,
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "traceResolution": false,
    "isolatedModules": false,
    "sourceMap": false,
    "declaration": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "src/*.test.*",
    "build"
  ]
}
